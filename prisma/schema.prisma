generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  NOMBRE_COMPLETO String
  DNI             Int
  COMUNIDAD       String?
  CDG_COMUNIDAD   Int?
  CODIGO          Int?
  CLAVE           String
  EMAIL           String?
  TELEFONO        String?
  URL_IMAGE       String?
  FECHA_REGISTRO  DateTime?
  ROL             Roles     @default(ARTESANO)
}

model Productos {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  ITEM          Int
  ANCHO         Int?
  ALTO          Int?
  TIPO_PESO     String
  PESO          Int?
  CANTIDAD      Int
  CATEGORIA     String
  IMAGEN        String?
  DESCRIPCION   String
  COD_FAMILIA   Int
  COD_ARTESANA  Int
  COD_ORDEN_PRO Int
  COD_PRODUCTO  Int
  FECHA_INGRESO DateTime @default(now())
  UBICACION     String?
}

model RegistrosVentas {
  id                       String    @id @default(auto()) @map("_id") @db.ObjectId
  FECHA_REGISTRO           DateTime? @default(now())
  CODIGO_REGISTRO          String
  CANTIDAD_TOTAL_PRODUCTOS Int
  ESTADO                   Boolean?  @default(true)
  PRODUCTOS                Venta[]
}

model Venta {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  FECHA_REGISTRO DateTime? @default(now())
  CANTIDAD       Int
  DESCRIPCION    String
  IMAGEN         String?
  COD_PRODUCTO   Int

  RegistrosVentas   RegistrosVentas? @relation(fields: [registrosVentasId], references: [id])
  registrosVentasId String?          @db.ObjectId
}

enum Roles {
  ARTESANO
  ADMIN
}
